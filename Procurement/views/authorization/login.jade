  body
    //- main body of our application
    
    .content-part
      include ../partials/flash
      .row
        .col-xs-12

          .panel.panel-form(style="box-shadow: 10px 10px 10px rgba(0,0,0,0.05);")
            // Form header
            .panel-heading(style="border-top-left-radius: 3px; border-top-right-radius: 3px; padding: 10px 15px; border-bottom: 1px solid transparent;text-align: center;color: rgb(255, 255, 255); border-bottom: 7px solid rgb(238, 238, 238); background: rgb(17, 55, 95);")
              h2.title Login
              //- p
                | Don't have an account?
                a(href='/auth/registration' style="color:#5B97D6")  Create one.
            .panel-body
              form(method='post' action='/auth/login')

                // Username or email
                .form-group
                  label.control-label(for='email') Email
                  .has-feedback
                    input.form-control(type="email", name="email", required="true")
                    span.form-control-feedback(aria-hidden='true')

                // Password
                .form-group
                  label.control-label(for='password') Password
                  .has-feedback
                    input.form-control(type="password", name="password", required="true")
                    span.form-control-feedback(aria-hidden='true')


                // Login button
                .form-group.text-center
                  button.btn.btn-primary(type="submit", style="margin-top:10px") Login
                  
